.add_pic{
	padding:0 10px;
	background:#fff;
	margin:10px 0;
}
.add_pic view{
	display:inline-block;
	margin-top:20rpx;
	width:100%;
	height:100px;
	line-height:200rpx;
	text-align:center;
	background:url(http://bmob-cdn-7744.b0.upaiyun.com/2016/11/23/95953c8b40f0d089800ebec438581cc4.png) no-repeat left center;
	background-size:160rpx auto;
	padding-left: 20px;
	color: #b2b2b2;

}
.image_box{
	width:100%;
	height: 100px;
	background:#fff;
	margin-top:20rpx;
	margin-bottom:20rpx;
	padding:10px 40rpx 10rpx;
}
.add_title,.addConent{

	padding:8px 20px;
	color:#646464;
	background:#fff;
	border-bottom:1px solid #EAEAEA;
}
.add_title{	
	line-height:30px;
}
.addConent textarea{
	width:100%;
	height:200rpx;
}
.addConent{
	padding-top:30rpx;
	height:200rpx;
	overflow:hidden;
	margin-bottom:30rpx;
}
label{
	color:#a0a0a0;
	padding-left:40rpx;
}
label text{
	padding-left:10rpx;
}
button{
	width:400rpx;
	height:80rpx;
	line-height:80rpx;
	text-align:center;
	font-size:16px;
	border:0 none;
	background:#BE925C;
	color:#fff;
	margin:30rpx auto
}
.picPre{
	width:50%;
	margin:0 auto;
	position:relative;
	box-sizing:border-box;
}
.picPre image{
	width:100px;
	height:100px;
}
.picPre view{
	position: absolute;
	right:0px;
	top:-20rpx;
	width:15px;
	height:15px;
	background:url(http://bmob-cdn-7744.b0.upaiyun.com/2016/11/23/23e708d8401db28080a47d384712f765.png) no-repeat;
	background-size: cover;
}
.hidden{
	display:none;
}